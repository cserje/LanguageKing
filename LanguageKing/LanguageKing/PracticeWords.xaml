<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageKing.PracticeWords">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="10, 30, 10, 10"
                    Android="10, 10, 10, 10"
                    WinPhone="10, 10, 10, 10" />
    </ContentPage.Padding>
    <!--<StackLayout Spacing="10" Orientation="Vertical" HorizontalOptions="Center">
        <Entry Placeholder="Question" IsEnabled="False" Margin="50" HorizontalOptions="FillAndExpand"></Entry>
       
            <Button Text="First answer" HorizontalOptions="Fill"></Button>
        <Button Text="Second answer"  ></Button>

        <Button Text="Third answer"></Button>
        <Button Text="Fourth answer"></Button>-->

    <StackLayout Orientation="Vertical" Spacing="20">
        <Label x:Name="questionLabel" Text="{Binding questionLabelText}" HorizontalOptions="Center" FontSize="Medium" />

        <Button x:Name="button1" Text="{Binding firstButtonText}" HorizontalOptions="Fill"/>
        <Button x:Name="button2" Text="{Binding secondButtonText}" HorizontalOptions="Fill"/>
        <Button x:Name="button3" Text="{Binding thirdButtonText}" HorizontalOptions="Fill"/>
        <Button x:Name="button4" Text="{Binding fourthButtonText}" HorizontalOptions="Fill"/>
    </StackLayout>
</ContentPage>